@model IEnumerable<NaturalCosmeticsECommerce.Models.Order> 

@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<h2>Tüm Siparişler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sipariş No</th>
            <th>Kullanıcı</th>
            <th>Tarih</th>
            <th>Toplam Tutar</th>
            <th>Durum</th>
            <th>Ürünler</th>
            <th>Durum Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User?.Email</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <span class="badge @GetStatusBadgeClass(order.Status)">
                        @order.Status.ToString()
                    </span>
                </td>
                <td>
                    <ul>
                        @foreach (var item in order.Items)
                        {
                            <li>@item.Product?.Name (x @item.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-flex">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        
                        <select name="newStatus" class="form-select form-select-sm me-2">
                            @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                            {
                                <option value="@status" selected="@(status.Equals(order.Status))">
                                    @status
                                </option>
                            }
                        </select>
                        
                        <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteOrder" method="post" onsubmit="return confirm('Bu siparişi silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@order.OrderId" />
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    public string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-warning",
            OrderStatus.Completed => "bg-success",
            OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
