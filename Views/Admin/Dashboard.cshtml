@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Paneli";
}

<div class="container">
    <h2 class="mb-4 text-success"><i class="fas fa-tachometer-alt me-2"></i> Admin Paneli</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-users fa-2x text-success me-3"></i>
                    <div>
                        <h5 class="card-title mb-1">Kullanıcı Listesi</h5>
                        <a href="/Admin/UserList" class="btn btn-outline-success btn-sm">Görüntüle</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fas fa-box-open fa-2x text-success me-3"></i>
                    <div>
                        <h5 class="card-title mb-1">Siparişleri Yönet</h5>
                        <a href="/Admin/ManageOrder" class="btn btn-outline-success btn-sm">Görüntüle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4 justify-content-center ">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title text-success mb-3">
                        <i class="fas fa-boxes me-2"></i> Ürün Yönetimi
                    </h5>
                    <div class="d-grid gap-2">
                        <a asp-controller="Product" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Yeni Ürün Ekle
                        </a>
                        <a asp-controller="Product" asp-action="List" class="btn btn-outline-success">
                            <i class="fas fa-list me-1"></i> Tüm Ürünleri Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>