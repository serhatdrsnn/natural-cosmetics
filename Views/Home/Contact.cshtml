@{
    ViewData["Title"] = "İletişim";
}

<div class="text-center my-5">
    <h1 class="display-5 animate__animated animate__zoomIn">
        <i class="fas fa-envelope-open-text text-primary"></i> @ViewData["Title"]
    </h1>
    <p class="text-muted animate__animated animate__fadeIn animate__delay-1s">Bize ulaşmak çok kolay.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h5>İletişim Bilgilerimiz</h5>
        <ul class="list-unstyled">
            <li><strong>Adres:</strong> İstanbul, Türkiye</li>
            <li><strong>Email:</strong> info@naturalcosmetics.com</li>
            <li><strong>Telefon:</strong> +90 532 000 00 00</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h5>İletişim Formu</h5>
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Adınız</label>
                <input type="text" class="form-control" id="name" placeholder="Ad Soyad">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-Posta</label>
                <input type="email" class="form-control" id="email" placeholder="example@mail.com">
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Mesajınız</label>
                <textarea class="form-control" id="message" rows="3" placeholder="Mesajınızı yazın..."></textarea>
            </div>
            <button type="submit" class="btn btn-success">Gönder</button>
        </form>
    </div>
</div>
