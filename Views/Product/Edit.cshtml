@model NaturalCosmeticsECommerce.Models.Product
@using System.Globalization

@{
    ViewData["Title"] = "Ürün Güncelle";
    var categories = (List<NaturalCosmeticsECommerce.Models.Category>)ViewBag.Categories;
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="5">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyat (₺)</label>
        <input asp-for="Price" class="form-control" value="@Model.Price.ToString("N2", CultureInfo.InvariantCulture)"
            step="0.01" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Resim URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <img src="@Model.ImageUrl" alt="Current Image" style="max-height: 200px;" />
                <p class="text-muted small">Mevcut Resim</p>
            </div>
        }
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Kategori</label>
        <select asp-for="CategoryId" class="form-select"
            asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name", Model.CategoryId))">
            <option value="">-- Kategori Seç --</option>
        </select>

        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label">Stok Miktarı</label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="List" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}