@model IEnumerable<NaturalCosmeticsECommerce.Models.Product>

<h2 class="mb-4 text-success">
    <i class="fas fa-seedling me-2"></i> Ürünler
</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Yeni Ürün Ekle
        </a>
    </div>
}

<form asp-action="List" method="get" class="mb-4 d-flex align-items-center flex-wrap">
    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" placeholder="Ürün ara..."
        class="form-control me-2 mb-2" style="max-width: 250px;" />
    <button type="submit" class="btn btn-success me-2 mb-2">
        <i class="fas fa-search me-1"></i> Ara
    </button>

    <a asp-action="List" class="btn btn-outline-secondary btn-sm me-2 mb-2">Tüm Ürünler</a>

    @foreach (var category in ViewBag.Categories)
    {
        <a asp-action="List" asp-route-categoryId="@category.CategoryId" class="btn btn-outline-success btn-sm me-2 mb-2">
            <i class="fas fa-tag me-1"></i> @category.Name
        </a>
    }
</form>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4 ">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/img/default.png" : product.ImageUrl)"
                        class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-success">
                            <i class="fas fa-leaf me-1"></i> @product.Name
                        </h5>
                        <p class="card-text text-muted small">@(product.Description ?? "Açıklama bulunmamaktadır")</p>
                        <p class="fw-bold">@product.Price.ToString("C")</p>

                        <div class="mt-auto d-flex flex-wrap gap-1">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                                class="btn btn-outline-success btn-sm me-1">
                                <i class="fas fa-eye me-1"></i> Detay
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId"
                                    class="btn btn-success btn-sm me-1">
                                    <i class="fas fa-edit me-1"></i> Düzenle
                                </a>

                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId"
                                    class="btn btn-outline-danger btn-sm me-1">
                                    <i class="fas fa-trash me-1"></i> Sil
                                </a>
                            }

                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.ProductId"
                                class="btn btn-success btn-sm me-1">
                                <i class="fas fa-shopping-basket me-1"></i> Sepete Ekle
                            </a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                if (ViewBag.FavoriteProductIds != null &&
                                ((List<int>)ViewBag.FavoriteProductIds).Contains(product.ProductId))
                                {
                                    <form asp-controller="Favorite" asp-action="Remove" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-heart-broken me-1"></i> Favoriden Kaldır
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Favorite" asp-action="Add" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-heart me-1"></i> Favoriye Ekle
                                        </button>
                                    </form>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
