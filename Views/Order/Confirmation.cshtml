@model NaturalCosmeticsECommerce.Models.Order

@{
    ViewData["Title"] = "Sipariş Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Siparişiniz Alındı!</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Siparişiniz başarıyla oluşturuldu.</strong> Teşekkür ederiz!
                    </div>

                    <h4 class="mt-4">Sipariş Detayları</h4>
                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Sipariş Numarası:</strong> @Model.OrderId</p>
                            <p><strong>Sipariş Tarihi:</strong> @Model.OrderDate.ToString("f")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("C")</p>
                            <p><strong>Teslimat Adresi:</strong> @Model.ShippingAddress</p>
                        </div>
                    </div>

                    <h4 class="mt-4">Sipariş İçeriği</h4>
                    <hr>

                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Ürün</th>
                                <th>Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Product.Price.ToString("C")</td>
                                    <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="/" class="btn btn-primary me-md-2">
                            <i class="fas fa-home me-1"></i> Ana Sayfaya Dön
                        </a>
                        <a asp-action="History" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i> Sipariş Geçmişi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
        }
        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }
    </style>
}