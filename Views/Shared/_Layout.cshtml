@using Microsoft.AspNetCore.Identity
@using NaturalCosmeticsECommerce.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - NaturalCosmeticsECommerce</title>
    @RenderSection("Styles", required: false)

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NaturalCosmeticsECommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-leaf me-1"></i> NaturalCosmetics
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="List">Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Sepet
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Favorite" asp-action="Index">
                                <i class="fas fa-heart"></i> Favoriler
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="History">
                                    <i class="fas fa-box"></i> Siparişlerim
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-cogs me-1"></i>Admin Paneli</a>
                            </li>
                        }
                    </ul>


                    <form class="d-flex me-3" asp-controller="Product" asp-action="List" method="get" role="search">
                        <input class="form-control me-2" type="search" name="searchString" placeholder="Ürün ara..."
                            aria-label="Search" value="@ViewBag.CurrentFilter" />
                        <button class="btn btn-success" type="submit">Ara</button>
                    </form>

                    @await Html.PartialAsync("~/Views/Shared/Partials/_UserMenu.cshtml")
                </div>
            </div>
        </nav>
    </header>

    <main class="container flex-grow-1 py-4">
        @RenderBody()
    </main>

    <footer class="border-top mt-auto py-3 text-center text-muted">
        <div class="container">
            &copy; 2025 - NaturalCosmeticsECommerce - <a asp-controller="Home" asp-action="Privacy">Gizlilik
                Politikası</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
